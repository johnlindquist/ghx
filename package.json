{
  "name": "@johnlindquist/ghx",
  "description": "GitHub search and examples CLI tool",
  "repository": {
    "type": "git",
    "url": "https://github.com/johnlindquist/ghx.git"
  },
  "main": "dist/src/index.js",
  "type": "module",
  "bin": {
    "ghx": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest run --bail 1",
    "dev": "node --experimental-strip-types index.ts",
    "build": "tsc",
    "build:check": "tsc --noEmit",
    "verify:bin": "pnpm build && [ -f dist/index.js ] || (echo 'dist/index.js not found' && exit 1)",
    "prepublishOnly": "pnpm build",
    "prepare": "husky",
    "precommit": "pnpm build:check && pnpm verify:bin",
    "commit": "cz",
    "semantic-release": "semantic-release"
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@tsconfig/node23": "^23.0.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^22.10.10",
    "@types/node-fetch": "^2.6.11",
    "@types/yargs": "^17.0.32",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "execa": "^9.5.2",
    "husky": "^9.1.7",
    "semantic-release": "^24.2.1",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "dependencies": {
    "@clack/prompts": "^0.9.1",
    "@johnlindquist/ghx": "^1.5.2",
    "@octokit/rest": "^21.1.0",
    "conf": "^13.1.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "env-paths": "^3.0.0",
    "mkdirp": "^3.0.1",
    "node-fetch": "^3.3.2",
    "sanitize-filename": "^1.6.3",
    "yargs": "^17.7.2",
    "zx": "^8.3.0"
  }
}
